<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DalluiApp.Views.ImageGeneratorView"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="ImageGeneratorView"
             Background="#101216">

    <Grid Margin="25,25,25,0" RowDefinitions=".2*, .6*, .2*">
        <VerticalStackLayout VerticalOptions="Center">
            <Label Text="Picture&#10;generated"
                   FontFamily="NexaHeavy"
                   FontSize="30"
                   TextColor="White"/>
            <HorizontalStackLayout Margin="0,10,0,0">
                <Label
                    FontSize="20"
                    Text="Time spent "
                    TextColor="#ACB1BB"
                    VerticalOptions="Center"/>
                <Grid>
                    <Border x:Name="borderTime"
                            Grid.Row="1"
                            BackgroundColor="#e8ff8e"
                            IsVisible="True"
                            Opacity="0"
                            Scale="1.1"
                            StrokeShape="RoundRectangle 5,5,5,5"
                            StrokeThickness="0">
                        <Label FontSize="20"
                               Text="0"
                               TextColor="#acb1bb"
                               VerticalOptions="Center"/>
                    </Border>
                </Grid>
                <Label
    FontSize="20"
    Text="  Seconds"
    TextColor="#ACB1BB"
    VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <Border x:Name="imageBorder"
            Grid.Row="1"
                IsVisible="False"
                StrokeShape="RoundRectangle 20,20,20,20"
                StrokeThickness="0">
            <Image Aspect="AspectFill" Source="cartoon.jpg"/>
        </Border>
        <Border x:Name="imageAnimation"
    Grid.Row="1"
                BackgroundColor="#E8FF8E"
                Opacity=".9"
        IsVisible="True"
        StrokeShape="RoundRectangle 20,20,20,20"
        StrokeThickness="0">
        </Border>
        <skia:SKLottieView
            x:Name="lottie"
            Grid.Row="1"
            IsAnimationEnabled="True"
            RepeatCount="-1"
            Source="robot.json"/>
        <Button Grid.Row="2"
                x:Name="btnFinish"
                Clicked="btnFinish_Clicked"
                BackgroundColor="#e8ff8e"
                CornerRadius="35"
                FontSize="25"
                HeightRequest="75"
                HorizontalOptions="Center"
                Text="Finish"
                TextColor="#101216"
                VerticalOptions="Center"
                WidthRequest="250"
                Scale="0.1">
            
        </Button>
    </Grid>
    
</ContentPage>